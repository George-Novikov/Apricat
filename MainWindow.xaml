<Window x:Class="Apricat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Apricat"
        mc:Ignorable="d"
        Title="MainWindow" Height="667" Width="1187" >
    <Grid ShowGridLines="False" Background="FloralWhite">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1" Grid.Column="0">
            <Button x:Name="lessonButton" MinHeight="50" MinWidth="110" Margin="3"
                    FontSize="16" FontFamily="Century Gothic" Content="К урокам"
                    Background="Beige" Foreground="SaddleBrown" BorderBrush="SaddleBrown">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="15"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button x:Name="repetitionButton" MinHeight="50" MinWidth="110" Margin="3"
                    FontSize="16" FontFamily="Century Gothic" Content="Повторение"
                    Background="Beige" Foreground="SaddleBrown" BorderBrush="SaddleBrown">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="15"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button x:Name="progressButton" MinHeight="50" MinWidth="110" Margin="3"
                    FontSize="16" FontFamily="Century Gothic" Content="Мой прогресс" 
                    Background="Beige" Foreground="SaddleBrown" BorderBrush="SaddleBrown">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="15"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
        <MediaElement x:Name="mainAnimation" Source="main animation (pause).wmv"
                      Grid.Column="0" Grid.Row="1" VerticalAlignment="Bottom"
                      LoadedBehavior="Play" UnloadedBehavior="Manual" MediaEnded="mainAnimation_OnEndedPlay"/>
        <GroupBox x:Name="workspaceGroupBox" Grid.Row="1" Grid.Column="1" Background="#fffdfa">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="7*"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock x:Name="lessonHeader" Grid.Row="0" Text="Урок 1"
                           HorizontalAlignment="Left" Margin="20"
                           FontSize="16" FontFamily="Verdana" FontWeight="Bold"
                           Foreground="SaddleBrown"/>
            </Grid>
        </GroupBox>
        <TextBlock Text="Абрикот" Foreground="SaddleBrown" FontSize="22" FontWeight="Bold" Grid.Column="0"
                 Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock x:Name="workspaceTextBlock" Grid.Row="1" Grid.Column="1" Foreground="SaddleBrown"/>
        <Button x:Name="settingsButton" Content="Settings" Grid.Column="3" Click="settingsButton_GroupBoxCollapse"
                HorizontalAlignment="Right" VerticalAlignment="Top"
                Background="Beige" Foreground="SaddleBrown" Height="50" Width="50"/>
        <GroupBox x:Name="settingsGroupBox" MinHeight="200" MinWidth="300" Foreground="SaddleBrown"
                  Visibility="Collapsed" Background="Beige" Grid.Row="1" Grid.Column="1"
                  HorizontalAlignment="Center" VerticalAlignment="Center">
            <GroupBox.Header>
                Настройки
            </GroupBox.Header>
        </GroupBox>
    </Grid>
</Window>
